<style>
  .wrap-container {
    display: flex;
    flex-wrap: wrap;
    background-color: var(--color-contrast-3);
    gap: 3rem;
    padding: 4rem clamp(1rem, 0.714rem + 1.43vw, 2rem);
    
  }

  .text-container {
    display: flex;
    flex-direction: column;
    flex: 1 1 25%;
    color: var(--color-base);
    align-items: start;
    justify-content: center;
    gap: 2rem;
  
  }

  .infograph-container {
    display: grid;
    place-content: center;
    grid-template-columns:  repeat(
      auto-fit, minmax(180px, 300px)
